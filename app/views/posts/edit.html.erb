<div class="main">
  <div class="container">
    <div class="form__wrapper">
      <h2 class="page-heading">新規投稿</h2>
      <%= form_with model: @post, local: true do |f|%>
          <div class="field">
          <%= f.label :image, "画像" %><br />
          <%= f.file_field :image %>
        </div>

        <div class="field">
          <%= f.label :title, "タイトル" %><br />
          <%= f.text_field :title, class: 'input-default' %>
        </div>

        <div class="field">
          <%= f.label :portfolio_url, "ポートフォリオのURL" %><br />
          <%= f.text_field :portfolio_url, class: 'input-default' %>
        </div>

        <div class="field">
          <%= f.label :github_url, "GitHubのURL" %><br />
          <%= f.text_field :github_url, class: 'input-default' %>
        </div>
        <div class="field">
          <%= f.label :overview, "概要" %><br />
          <%= f.text_area :overview, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :use_tech, "使用した言語・技術" %><br />
          <%= f.text_area :use_tech, class: :form__text %>
        </div>

        <div class="actions">
          <%= f.submit "保存する", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>